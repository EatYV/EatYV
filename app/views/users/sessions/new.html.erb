<div class="home_background">
  <div class="home_background-content">
    <%= link_to '&#x276e;'.html_safe, authentication_index_path, class: 'btn btn-outline-secondary btn-circle' %><br><br>
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <!-- <%= f.label :email %><br /> -->
        <%= f.text_field :login, autofocus: true, placeholder: :login %>
      </div>

      <div class="field">
        <!-- <%= f.label :password %><br /> -->
        <br>
        <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-warning' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
