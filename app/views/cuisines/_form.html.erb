  <div class="col-md-8 col-md-offset-2 text-center">
    <% if chef_signed_in? %>
      <%= form_for(cuisine) do |f| %>
        <% if cuisine.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(cuisine.errors.count, "error") %> prohibited this cuisine from being saved:</h2>

            <ul>
            <% cuisine.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <!-- <%= f.label :title %> -->
          <%= f.text_field :title, placeholder: 'Cuisine title', class: 'form-control' %>
        </div>

        <br>

        <div class="field">
          <!-- <%= f.label :about %> -->
          <%= f.text_area :about, placeholder: 'Tell us about you and your cuisine', class: 'form-control', size: '30x8' %>
        </div>

        <br>

        <div class="field">
          <!-- <%= f.label :availability %> -->
          <%= f.text_field :availability, placeholder: :availability, class: 'form-control' %>
        </div>

        <br>

        <div class="field">
          <!-- <%= f.label :location %> -->
          <%= f.country_select :location, include_blank: 'Select a country' %>
          <br>
          <br>
          <%= f.text_field :city, placeholder: :city, class: 'form-control' %>
        </div>
        <br>

         <div class="field">
          <!-- <%= f.label :address %> -->
          <%= f.text_field :address, placeholder: :address, class: 'form-control' %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit class: 'btn btn-warning' %>
        </div>
        <br>
      <% end %>
    <% end %>
  </div>
